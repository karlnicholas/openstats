<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://java.sun.com/xml/ns/persistence
		http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="openstats">
		<jta-data-source>java:jboss/datasources/OpenStatsDS</jta-data-source>
		<class>openstats.model.DBGroup</class>
		<class>openstats.model.DBGroupInfo</class>
		<class>openstats.model.DBAssembly</class>
		<class>openstats.model.DBDistricts</class>
		<class>openstats.model.DBDistrict</class>
		<class>openstats.model.DBLegislator</class>
		<class>openstats.model.AggregateValues</class>
		<class>openstats.model.ComputationValues</class>
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
		</properties>
	</persistence-unit>
</persistence>